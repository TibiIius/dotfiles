configuration {
  show-icons: true;
  font: "FiraCode Nerd Font Bold 15";
  drun-display-format: "{icon} {name}";
  display-run: " ";
  display-drun: " ";
  display-ssh: " ";
  modi: "ssh,run,drun";
	fullscreen: false;
	me-select-entry: "";
	me-accept-entry: "MousePrimary";
}

* {
  background-color: #0f111a;
  bg-alt: #0f111a;
  fg: #e5e9f0;

  ocean-blue-light: #88C0D0;
  ocean-yellow: #EBCB8B;

  border: 0;
  lines: 4;
  padding: 0;
  margin: 0;
  spacing: 0;
}

window {
  width: 10%;
  transparency: "real";
}

mainbox {
  children: [inputbar, listview];
}

listview {
  columns: 1;
}

element {
  padding: 4;
  /* orientation: vertical; */
  text-color: @fg;
  /* children: [element-icon, element-text]; */
}

element-icon {
}

element selected {
  background-color: @bg-alt;
  text-color: @ocean-blue-light;
}

element-text {
  padding: 18 0 18 0;
}

inputbar {
  background-color: @background;
  children: [prompt, entry];
  enabled: false;
}

prompt {
}

entry {
}
