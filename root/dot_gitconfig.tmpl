[user]
	name = {{ .name | quote }}
	email = {{ .email | quote }}
{{ if not (eq .machineType "work") }}
	signingkey = 4B3B63F9A1CB361C
{{ end }}
[commit]
	gpgsign = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[push]
	followTags = true

[pull]
	rebase = true
