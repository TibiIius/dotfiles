# Rasmus 5Head-Git-Stuff
currentBranch() {
    git rev-parse --abbrev-ref HEAD
}

gitrs() {
    git_fml || return 1
    if [[ -z $1 ]]; then
        echo "No remote"
        return 1
    fi

    branch=$(currentBranch)
    git switch -C "${branch}" "${1}/${branch}"
    grunt
}

gitrm() {
    git_fml || return 1
    if [[ -z $1 ]]; then
        echo "No remote"
        return 1
    fi

    branch=$(currentBranch)
    git merge $1/$branch
}

git_fml() {
    if [[ -e $(pwd)/.git/index.lock ]]; then
        echo "Index lock exists, aborting..."
        return 1
    fi
}

